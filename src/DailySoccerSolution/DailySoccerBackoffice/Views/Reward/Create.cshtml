@model DailySoccer.Shared.Models.RewardGroupInformation

@{
    ViewBag.Title = "Create";
}

<h2>เพิ่มรอบการจับรางวัล</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class = "control-label col-md-2">วันจับรางวัล</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ExpiredDate, new { htmlAttributes = new { @class = "form-control", @id = "datepicker" } })
                @Html.ValidationMessageFor(model => model.ExpiredDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">คะแนนที่ใช้แลก</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.RequestPoints, new { htmlAttributes = new { @class = "form-control" } })
